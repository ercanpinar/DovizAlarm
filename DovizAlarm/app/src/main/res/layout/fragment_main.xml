<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/cyan_strong"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dolar"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_dolar_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_dolar_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/cyan_strong"
        android:clickable="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/euro"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_euro_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_euro_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:singleLine="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/cyan_strong"
        android:clickable="true"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/gold"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_altin_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:singleLine="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_altin_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="BİLGİ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_more_dark_grayish_blue"/>

    <TextView
        android:id="@+id/tv_guncelleme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColor="@color/gray_dark_grayish_blue"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="ALARM DEĞERLERİ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_more_dark_grayish_blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingLeft="20dp"
            android:paddingBottom="4dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="DOLAR ALIŞ"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="DOLAR SATIŞ"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_dolar_alis_alarm_degeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="1.2345 TL"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>


            <TextView
                android:id="@+id/tv_dolar_satis_alarm_degeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="1.2345 TL"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingLeft="20dp"
            android:paddingBottom="4dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="EURO ALIŞ"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/gray_dark_grayish_blue"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="EURO SATIŞ"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_euro_alis_alarm_degeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="1.2345 TL"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>

            <TextView
                android:id="@+id/tv_euro_satis_alarm_degeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="1.2345 TL"
                android:layout_weight="3"
                android:textColor="@color/gray_dark_grayish_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:text="ALARM AKTİF OLSUN"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textColor="@color/gray_dark_grayish_blue"/>

            <CheckBox
                android:id="@+id/chck_alarm"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="5 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_five_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="15 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_fifty_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="30 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_thirty_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="60 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_one_hour"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Alarm kontrol aralığı \n Batarya kullanımı açısından güncelleme sıklığı 30dk olarak ayarlanmıştır.\n İsteğinize bağlı olarak değiştirebilirsiniz."
            android:textStyle="bold"
            android:textColor="@color/gray_dark_grayish_blue"/>
    </LinearLayout>

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/lr_alarm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red_strong"
        android:clickable="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center|left"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@drawable/alarm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:text="ALARM KUR"
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </com.gc.materialdesign.views.LayoutRipple>
</RelativeLayout>
