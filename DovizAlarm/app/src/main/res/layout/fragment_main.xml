<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/lacivert"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dolar"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_dolar_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_dolar_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_euro_area"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/lacivert"
        android:clickable="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/euro"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_euro_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_euro_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:singleLine="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/lacivert"
        android:clickable="true"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:weightSum="5"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/gold"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Alış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_altin_alis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:singleLine="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:background="@color/gray_dark_grayish_blue"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satış"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_altin_satis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_euro_area"
        android:gravity="right"
        android:paddingRight="10dp">

        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/lr_guncelle_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/red_strong"
            android:clickable="true"
            android:layout_margin="8dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GÜNCELLE"
                android:textSize="17sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </com.gc.materialdesign.views.LayoutRipple>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="90dp"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:textSize="14sp"
            android:text="KONTROL ARALIĞI"
            android:textStyle="bold"
            android:textColor="@color/gray_dark_grayish_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/chck_alarm"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:text="ALARM AKTİF OLSUN"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textColor="@color/gray_dark_grayish_blue"/>

            <Spinner
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_alarm_time"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:drawable/ic_dialog_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Alarm kontrol aralığı cihazınızın şarj tüketimini etkiler."
                android:textStyle="italic"

                android:textColor="@color/gray_dark_grayish_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            android:weightSum="4"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="5 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_five_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="15 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_fifty_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="30 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_thirty_min"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="60 dk."
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/gray_dark_grayish_blue"/>

                <CheckBox
                    android:id="@+id/chck_alarm_time_one_hour"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/lr_alarm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red_strong"
        android:clickable="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center|left"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@drawable/alarm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:text="ALARM KUR"
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </com.gc.materialdesign.views.LayoutRipple>
</RelativeLayout>
